<Window x:Class="Invisiblehand.VideoCaptureControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Invisiblehand"
             mc:Ignorable="d" 
             WindowStartupLocation="CenterOwner"
            Closing="control_Closing"
            Title="미리보기" Height="800" Width="600" x:Name="control">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBox x:Name="txtTimeStamp" Grid.Column="0" Margin="0,0,296.6,726.4" Grid.ColumnSpan="2" />

        <Image x:Name="imgDepth" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,44,0,377" />
        <Image x:Name="imgColor" Margin="0,428,0,0" Grid.ColumnSpan="2" />
    </Grid>
</Window>
